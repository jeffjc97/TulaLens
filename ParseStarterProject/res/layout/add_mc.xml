<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/question_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:padding="10sp"
            />

        <TextView
            android:id="@+id/question_mc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="10sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Add a free response question:"
            />

        <EditText
            android:id="@+id/input_mc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="text"
            />

        <TextView
            android:id="@+id/choice_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="10sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Choice 1:"
            />

        <EditText
            android:id="@+id/input_choice_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="text"
            />

        <TextView
            android:id="@+id/choice_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="10sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Choice 2:"
            />

        <EditText
            android:id="@+id/input_choice_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="text"
            />

        <TextView
            android:id="@+id/choice_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="10sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Choice 3:"
            />

        <EditText
            android:id="@+id/input_choice_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="text"
            />

        <TextView
            android:id="@+id/choice_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="10sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Choice 4:"
            />

        <EditText
            android:id="@+id/input_choice_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="text"
            />

        <Button
            android:id="@+id/submit_question"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:text="Submit Question"
            android:textSize="24sp"
            android:background="#7CD77A"
            android:textColor="#fff"/>

    </LinearLayout>

</ScrollView>